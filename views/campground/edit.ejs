<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <h1 style="text-align: center;">Editing '<%= camp.name %>'</h1>
        
        <!--will remove later-->
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[nightlyPrice]" value="<%= camp.nightlyPrice %>" 
                        min="0.01" step="0.01">
                    <!-- sets up min value as well as increment when using arrows -->
                </div>                 
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>   
            
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>